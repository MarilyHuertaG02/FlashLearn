rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PERFILES DE USUARIO
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // SETS DEL USUARIO
    match /usuarios/{userId}/sets/{setId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // FLASHCARDS DEL USUARIO
    match /usuarios/{userId}/sets/{setId}/flashcards/{cardId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // QUIZZES DEL USUARIO
    match /usuarios/{userId}/quizzes_creados/{quizId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // SETS PÚBLICOS
    match /setsPublicos/{setId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // FLASHCARDS DE SETS PÚBLICOS
    match /setsPublicos/{setId}/flashcards/{cardId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ✅ NUEVAS REGLAS PARA COMPARTIR
    match /setsCompartidos/{setId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /quizzesCompartidos/{quizId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
// ✅ PREGUNTAS DE QUIZZES DEL USUARIO
    match /usuarios/{userId}/quizzes_creados/{quizId}/preguntas/{preguntaId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }	
  // ✅ RESULTADOS DE QUIZZES (HISTORIAL)
    match /usuarios/{userId}/quizzes/{quizId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
